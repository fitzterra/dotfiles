# Setup for pyenv if it is found in the ~/devel/pyenv dir
if [ -d "$HOME/devel/pyenv" ]; then
    export PYENV_ROOT="$HOME/devel/pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    if command -v pyenv 1>/dev/null 2>&1; then
        eval "$(pyenv init -)"
    fi
    # Setup for pyenv-virtualenv
    eval "$(pyenv virtualenv-init -)"
fi
